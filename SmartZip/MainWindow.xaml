<Window x:Class="SmartZip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartZip"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300" AllowDrop="True">
    <Grid AllowDrop="True" PreviewDrop="Grid_PreviewDrop">
        <StackPanel AllowDrop="True" PreviewDrop="Grid_PreviewDrop" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Label Content="Drag and drop files here" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
        </StackPanel>
    </Grid>
</Window>